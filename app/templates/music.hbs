<div id="music" class="min-h-full w-full flex flex-col">
  {{#if this.isMobile}}
    <div class="flex flex-col flex-grow">
      <div class="flex flex-col min-h-full">
        <MusicPlayer />
      </div>
    </div>
  {{else}}
    <div class="flex flex-grow">
      <div class="flex flex-col min-h-full">
        <MusicPlayer />
      </div>
      <img class="flex-shrink" src={{this.bgSource}} />
    </div>
  {{/if}}
</div>