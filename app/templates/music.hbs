<div id="music" class="min-h-screen w-full flex flex-col">
  <TopBar />
  {{#if this.isMobile}}
    <div class="flex flex-col flex-grow">
      <MusicPlayer />
    </div>
  {{else}}
    <div class="flex flex-grow">
      <div class="flex flex-col min-h-full">
        <MusicPlayer />
      </div>
      <img class="flex-shrink" src={{this.bgSource}} alt="Old Tape Player" >
    </div>
  {{/if}}
  <BottomBar />
</div>